---
interface Props {
    title: string;
    excerpt: string;
    slug: string;
    feturedImage: string;
    date: string;
}

const { excerpt, title, slug, feturedImage, date } = Astro.props;
---

<article
    class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105"
>
    <img src={feturedImage} alt={title} class="w-full h-48 object-cover" />
    <div class="p-6">
        <h2 class="text-xl font-bold mb-2">
            {title}
        </h2>
        <p class="text-gray-600 text-sm mb-6">{date}</p>
        <div class="text-gray-700" set:html={excerpt} />
        <a href={`/post/${slug}`}>
            <button
                class="bg-blue-600 text-white font-semibold py-2 mt-4 px-4 rounded hover:bg-blue-700 cursor-pointer"
            >
                Ver MÃ¡s
            </button>
        </a>
    </div>
</article>
